{% extends 'IsiPopSiteBundle:layouts:application.html.twig' %}

{% block container %}
<div class="buffer-message">
  <div class="container">
      <div class="ball"></div>
      <div class="ball"></div>
      <div class="ball"></div>
      <div class="ball"></div>
      <div class="ball"></div>
      <div class="ball"></div>
      <div class="ball"></div>
  </div>
  <p class="lead">Waiting for stream to buffer...</p>
</div>


<div class="watch">
  <a class="btn btn-success" href="{{ streamUrl }}">Watch Now </a>
</div>

<script>
  var streamURL = "{{ streamUrl }}";
  $(document).ready(function() {
    setTimeout(function(){
      var iOS = ( navigator.userAgent.match(/(iPad|iPhone|iPod)/g) ? true : false );

      if (iOS) {
        window.location.replace(streamURL);
      }
      else {

        $('.buffer-message').hide();

        var video = '<embed type="application/x-vlc-plugin" pluginspage="http://www.videolan.org" version="VideoLAN.VLCPlugin.2"  width="100%"  height="100%" id="vlc" loop="yes" autoplay="yes" target="' + streamURL + '"></embed>';

        $('.player').append(video);
        _V_('player');
        _V_('player').play();

      }
      
    }, 6000);
  });
</script>

{% endblock %}